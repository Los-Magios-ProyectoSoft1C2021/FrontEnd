<div class="mr-0 ml-auto flex flex-row items-end space-x-4 lg:h-24">

    <a href="/publicar" data-link
        class="h-full px-2 flex flex-row border-b-4 hover:border-indigo-700 link transition-all duration-300 cursor-pointer">
        <div class="my-auto flex flex-col items-center text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 19v-8.93a2 2 0 01.89-1.664l7-4.666a2 2 0 012.22 0l7 4.666A2 2 0 0121 10.07V19M3 19a2 2 0 002 2h14a2 2 0 002-2M3 19l6.75-4.5M21 19l-6.75-4.5M3 10l6.75 4.5M21 10l-6.75 4.5m0 0l-1.14.76a2 2 0 01-2.22 0l-1.14-.76" />
            </svg>
            <p class="font-subtitle2 select-none">Publicar</p>
        </div>
    </a>
    {{#if isAdmin}}
    <a href="/admin/add-hotel" data-link
        class="h-full px-2 flex flex-row border-b-4 hover:border-indigo-700 link transition-all duration-300 cursor-pointer">
        <div class="my-auto flex flex-col items-center text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <p class="font-subtitle2 select-none">Admin</p>
        </div>
    </a>
    {{else}}
    <!-- user reservas -->
    <a href="/usuario/reservas" data-link
        class="h-full px-2 flex flex-row border-b-4 hover:border-indigo-700 link transition-all duration-300 cursor-pointer">
        <div class="my-auto flex flex-col items-center text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            <p class="font-subtitle2 select-none">Mis reservas</p>
        </div>
    </a>
    {{/if}}

    <!-- user info -->
    <div
        class="h-full px-2 flex flex-row items-end space-x-4 border-b-4 hover:border-indigo-700 link transition-all duration-300 cursor-pointer">
        <div class="space-x-0.5 my-auto text-right pt-1">
            <h3 class="font-h3 select-none">{{nombre}} {{apellido}}</h3>
            <h6 class="font-subtitle2 select-none">{{correo}}</h6>
        </div>
        <div class="my-auto">
            <img src="https://karateinthewoodlands.com/wp-content/uploads/2017/09/default-user-image.png" alt=""
                class="h-14 w-14 rounded-full ring ring-gray-300 hover:ring-gray-500 transition-all duration-300 object-fill">
        </div>
    </div>

    <!-- logout -->
    <button id="btn-salir"
        class="h-full my-auto px-2 border-b-4 hover:border-red-500 text-gray-500 hover:text-red-600 outline-none focus:outline-none transition-all duration-300">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        <p class="font-subtitle2 select-none">Salir</p>
    </button>
</div>