<div class="mr-0 ml-auto flex flex-row items-end space-x-4 lg:h-24">

    <!-- publicar -->
    <a href="/publicar" data-link
        class="h-full flex flex-row border-b-4 hover:border-indigo-700 link transition-all duration-300 cursor-pointer">
        <div class="my-auto flex flex-col items-center text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <p class="font-subtitle2 select-none">Publicar</p>
        </div>
    </a>

    <!-- user reservas -->
    <a href="/usuario/reservas" data-link
        class="h-full flex flex-row border-b-4 hover:border-indigo-700 link transition-all duration-300 cursor-pointer">
        <div class="my-auto flex flex-col items-center text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            <p class="font-subtitle2 select-none">Mis reservas</p>
        </div>
    </a>

    <!-- user info -->
    <div
        class="h-full flex flex-row items-end space-x-4 border-b-4 hover:border-indigo-700 link transition-all duration-300 cursor-pointer">
        <div class="space-x-0.5 my-auto text-right pt-1">
            <h3 class="font-h3 select-none">{{nombre}} {{apellido}}</h3>
            <h6 class="font-subtitle2 select-none">{{correo}}</h6>
        </div>
        <div class="my-auto">
            <img src="https://karateinthewoodlands.com/wp-content/uploads/2017/09/default-user-image.png" alt=""
                class="h-14 w-14 rounded-full ring ring-gray-300 hover:ring-gray-500 transition-all duration-300 object-fill">
        </div>
    </div>

    <!-- logout -->
    <button id="btn-salir"
        class="h-full my-auto px-5 border-b-4 hover:border-red-500 text-gray-500 hover:text-red-600 outline-none focus:outline-none transition-all duration-300">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        <p class="font-subtitle2 select-none">Salir</p>
    </button>
</div>