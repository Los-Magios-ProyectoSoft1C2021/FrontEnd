<div class="lg:container mx-auto my-12">
    <div class="my-4">
        <div>
            <h1 class="font-h1 tracking-normal">{{nombre}}</h1>
            <p class="font-h6 text-gray-600">{{direccion}} {{direccionNum}}, {{ciudad}}, {{provincia}}</p>
        </div>
    </div>

    <div class="flex flex-row space-x-2">
        <div class="w-3/4">
            <div class="primary-slider w-full">
                <div class="splide__track">
                    <ul class="splide__list">
                        {{#each fotos}}
                        <li class="splide__slide">
                            <div class=" w-auto h-full bg-white">
                                <img src="{{imagenUrl}}" alt="" class="w-full h-full object-cover">
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="secondary-slider ">
                <div class="splide__track h-36">
                    <ul class="splide__list flex flex-row ">
                        {{#each fotos}}
                        <li class="splide__slide">
                            <div class=" w-auto h-full bg-white">
                                <img src="{{imagenUrl}}" alt="" class="w-full h-full object-cover object-center">
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="w-1/4 px-4 py-3 mb-4 rounded bg-primary-darker lg:flex-none">
            <form action="">
                <h3 class="font-h2 text-white mb-2">Rerserva</h3>
                <h6 class="mb-1 font-h6 text-white">Fecha de entrada</h6>
                <div class="inline-block relative w-full mb-4">
                    <div class="absolute inset-y-0 left-0 mx-1 flex items-center px-2 text-primary-lighter">
                        <svg class="fill-current h-5 w-5" style="width:24px;height:24px" viewBox="0 0 24 24">
                            <path fill="currentColor"
                                d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" />
                        </svg>
                    </div>
                    <input type="text" placeholder="Entrada"
                        class="block appearance-none pl-11 pr-8 w-full input-container-on-primary rounded"
                        id="fecha_entrada">
                    </input>
                </div>

                <h6 class="mb-1 font-h6 text-white">Fecha de salida</h6>
                <div class="inline-block relative w-full mb-4">
                    <div class="absolute inset-y-0 left-0 mx-1 flex items-center px-2 text-primary-lighter">
                        <svg class="fill-current h-5 w-5" style="width:24px;height:24px" viewBox="0 0 24 24">
                            <path fill="currentColor"
                                d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" />
                        </svg>
                    </div>
                    <input type="text" placeholder="Salida"
                        class="block appearance-none pl-11 pr-8 w-full input-container-on-primary rounded"
                        id="fecha_salida">
                    </input>
                </div>
                <h6 class="mb-1 font-h6 text-white">Tipo de habitación</h6>
                <div class="inline-block relative w-full">
                    <div class="absolute inset-y-0 left-0 mx-1 flex items-center px-2 text-primary-lighter">
                        <svg class="fill-current h-5 w-5" style="width:24px;height:24px" viewBox="0 0 24 24">
                            <path fill="currentColor"
                                d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                        </svg>
                    </div>
                    <select class="block appearance-none pl-10 pr-8 w-full input-container-on-primary rounded">
                        <option>Cualquiera</option>
                        <option>Indivual</option>
                        <option>Matrimonial</option>
                        <option>Suite</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                            <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                        </svg>
                    </div>
                </div>

                <input type="button" class="mb-2 mt-6 btn-filled py-2 w-full text-white" id="destino" value="Reservar">
            </form>
        </div>
    </div>

    <div class="mt-16 space-y-2">
        <div class="pb-2">
            <h4 class="text-black font-h1">Ubicación en el mapa</h4>
            <div class="flex space-x-1">
                <span class="font-h6 text-black">Direccion:</span>
                <span class="font-h6 text-gray-700">{{direccion}} {{direccionNum}}, {{ciudad}},
                    {{provincia}}</span>
            </div>
        </div>

        <div id="map-template" class="h-96 w-full rounded-2xl"></div>
    </div>

    <div class="mt-16 space-y-2">
        <div class="pb-2">
            <h4 class="text-black font-h1">El alojamiento ofrece</h4>
        </div>
        <div class="px-2 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
            {{#each servicios}}
            <li class="mx-2 py-0.5">
                <p class="font-h6 text-gray-700">{{this}}</p>
            </li>
            {{/each}}
        </div>
    </div>
</div>