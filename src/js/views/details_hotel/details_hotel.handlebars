<div class="bg-indigo-700 py-4">
    <div class="lg:container mx-auto flex flex-col">
        <h1 class="font-h1 text-white tracking-normal">{{nombre}}</h1>
        <div class="mt-1 flex flex-row flex-grow">
            {{#times estrellas}}
            <svg class="text-yellow-500 h-4 w-4" viewBox="0 0 24 24">
                <path fill="currentColor"
                    d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z" />
            </svg>
            {{/times}}
        </div>
    </div>
</div>
<div class="bg-indigo-600 py-2">
    <div class="lg:container mx-auto">
        <p class="font-h6 text-gray-200">{{direccion}} {{direccionNum}}, {{ciudad}}, {{provincia}}</p>
    </div>
</div>
<div class="lg:container mx-auto">
    <div class="flex flex-row space-x-2 py-6">
        <div class="flex flex-col relative w-3/4">
            <div class="primary-slider w-full">
                <div class="splide__track">
                    <ul class="splide__list">
                        {{#each fotos}}
                        <li class="splide__slide">
                            <div class=" w-auto h-full bg-white">
                                <img src="{{imagenUrl}}" alt="" class="w-full h-full object-cover">
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="secondary-slider">
                <div class="splide__track">
                    <ul class="splide__list flex flex-row">
                        {{#each fotos}}
                        <li class="splide__slide">
                            <div class="w-full h-full bg-white">
                                <img src="{{imagenUrl}}" alt="" class="w-full h-full object-cover object-center">
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        {{#if login}}
        <div class="w-1/4 mb-1 rounded bg-white flex">
            <div class="flex flex-col flex-grow px-5 py-5 mx-2 border border-gray-300 rounded">
                <h3 class="font-h2 text-black">Rerservar</h3>
                <p class="font-p text-gray-700 pb-6">Ingrese los datos de su reserva</p>

                <!-- fecha de entrada -->
                <div class="space-y-4">
                    <div>
                        <h6 class="mb-1 font-h6 text-800">Fecha de entrada</h6>
                        <div class="inline-block relative w-full">
                            <div class="absolute inset-y-0 left-0 mx-1 flex items-center px-2 text-primary-lighter">
                                <svg class="fill-current h-5 w-5" style="width:24px;height:24px" viewBox="0 0 24 24">
                                    <path fill="currentColor"
                                        d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" />
                                </svg>
                            </div>
                            <input type="text" placeholder="Entrada"
                                class="block appearance-none pl-11 pr-8 w-full input-container-on-primary rounded"
                                id="fecha-entrada">
                            </input>
                        </div>
                        <p class="font-subtitle2 text-red-600 hidden" id="validar-fecha-entrada">
                            La fecha de entrada no puede estar vacía
                        </p>
                    </div>

                    <!-- fecha de salida-->
                    <div>
                        <h6 class="font-h6 text-gray-800">Fecha de salida</h6>
                        <div class="inline-block relative w-full">
                            <div class="absolute inset-y-0 left-0 mx-1 flex items-center px-2 text-primary-lighter">
                                <svg class="fill-current h-5 w-5" style="width:24px;height:24px" viewBox="0 0 24 24">
                                    <path fill="currentColor"
                                        d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" />
                                </svg>
                            </div>
                            <input type="text" placeholder="Salida"
                                class="block appearance-none pl-11 pr-8 w-full input-container-on-primary rounded"
                                id="fecha-salida">
                            </input>
                        </div>
                        <p class="font-subtitle2 text-red-600 hidden" id="validar-fecha-salida">
                            La fecha de salida no puede estar vacía
                        </p>
                    </div>

                    <!-- tipo de habitacion -->
                    <div>
                        <h6 class="mb-1 font-h6 text-gray-800">Tipo de habitación</h6>
                        <div class="inline-block relative w-full">
                            <div class="absolute inset-y-0 left-0 mx-1 flex items-center px-2 text-primary-lighter">
                                <svg class="fill-current h-5 w-5" style="width:24px;height:24px" viewBox="0 0 24 24">
                                    <path fill="currentColor"
                                        d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                                </svg>
                            </div>
                            <select class="block appearance-none pl-10 pr-8 w-full input-container-on-primary rounded"
                                id="tipo-habitacion">
                                <option>Individual</option>
                                <option>Matrimonial</option>
                                <option>Suite</option>
                            </select>
                            <div
                                class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 20 20">
                                    <path
                                        d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                                </svg>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="flex-grow"></div>
                <input type="button" class="mt-12 btn-filled py-2 w-full text-white cursor-pointer" id="btn-reservar"
                    value="Reservar">
            </div>
        </div>
        {{else}}
        <div>
            <div class="w-full mx-2 px-4 space-y-12 py-8 border border-gray-300 rounded">
                <div class="w-full text-center space-y-2">
                    <h3 class="font-h2 text-black">¿Querés reservar?</h3>
                    <h4 class="font-p text-gray-800">Es necesario que inicies sesión con tu cuenta de Booking UNAJ.
                    </h4>
                    <p class="font-p text-gray-800">
                        Únete a Booking UNAJ y encuentra cientos de hoteles en todos los rincones de Argentina.
                    </p>
                </div>
                <div class="w-full space-y-2 flex flex-col text-center">
                    <a href="/login" class="btn-filled px-4 py-2 text-white font-button w-full" data-link>
                        Iniciar sesión
                    </a>
                    <a href="/registrarse"
                        class="btn-outlined text-lg font-semibold tracking-normal rounded-full px-4 py-2 font-button w-full"
                        data-link>
                        Registrarse
                    </a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<div class="bg-gray-100">
    <div class="lg:container mx-auto py-8">
        <div class="bg-white border border-gray-300 rounded-2xl my-6">
            <div class="divide-y divide-gray-400 px-5 pt-4 pb-3">
                <div class="py-3">
                    <h4 class="text-black font-h1">Ubicación en el mapa</h4>
                </div>
                <div class="flex flex-col space-y-1 py-3">
                    <div class="flex flex-row space-x-1">
                        <p class="font-h6 text-black">Direccion:</p>
                        <span class="font-h6 text-gray-700">{{direccion}} {{direccionNum}}, {{ciudad}},
                            {{provincia}}</span>
                    </div>
                    <div class="flex flex-row space-x-1">
                        <p class="font-h6 text-black">Coordenadas:</p>
                        <span class="font-h6 text-gray-700">{{latitud}}, {{longitud}}</span>
                    </div>
                </div>
            </div>

            <div id="map-template" class="h-96 w-full rounded-b-2xl"></div>
        </div>

        <div class="bg-white border border-gray-300 rounded-2xl my-6">
            <div class="divide-y divide-gray-400 px-6 py-4">
                <div class="py-3">
                    <h4 class="text-black font-h1">El alojamiento ofrece</h4>
                </div>
                <div class="py-3 px-2 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
                    {{#each servicios}}
                    <li class="mx-2 py-0.5 flex space-x-2">
                        <p class="select-none font-p text-gray-700">‣</p>
                        <p class="font-p text-gray-700">{{this}}</p>
                    </li>
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="bg-white border border-gray-300 rounded-2xl my-6">
            <div class="divide-y divide-gray-400 px-6 py-4">
                <div class="py-3">
                    <h4 class="text-black font-h1">Contacto</h4>
                </div>
                <div class="py-3">
                    <div class="flex flex-col space-y-0.5">
                        <div class="flex space-x-1">
                            <span class="font-h6 text-black">Teléfono: </span>
                            <span class="font-h6 text-gray-700">{{telefono}}</span>
                        </div>
                        <div class="flex space-x-1">
                            <span class="font-h6 text-black">Correo: </span>
                            <span class="font-h6 text-gray-700">{{correo}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-col items-center justify-center mt-12 mb-4 space-y-3">
            <h1 class="font-h1 text-black">¿Estás listo para reservar?</h1>
            <a href="#" class="link-primary font-h3 text-center flex">
                <p>Ir arriba</p>
                <svg style="width:32px;height:32px" viewBox="0 0 24 24" class="pt-1">
                    <path fill="currentColor" d="M7.41,15.41L12,10.83L16.59,15.41L18,14L12,8L6,14L7.41,15.41Z" />
                </svg>
            </a>
        </div>
    </div>
</div>